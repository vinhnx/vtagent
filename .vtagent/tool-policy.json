{
  "version": 1,
  "default": {
    "allow": true,
    "rate_limit_per_run": 20,
    "max_concurrent": 2,
    "fs_write": true,
    "network": false
  },
  "tools": {
    "run_terminal_cmd": {
      "allow": true,
      "fs_write": true,
      "network": false,
      "args_policy": {
        "deny_substrings": [
          "rm -rf",
          "git reset --hard",
          ":(){ :|:& };:"
        ]
      }
    },
    "code_search": { "allow": true },
    "codebase_search": { "allow": true },
    "rp_search": { "allow": true },
    "list_files": { "allow": true },
    "read_file": { "allow": true },
    "write_file": { "allow": true },
    "edit_file": { "allow": true }
  }
}